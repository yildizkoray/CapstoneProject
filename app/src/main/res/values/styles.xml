<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TabBarTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/blue_grey_700</item>
        <item name="colorPrimaryDark">@color/blue_grey_900</item>
        <item name="colorAccent">@color/amber_800</item>
    </style>


    <style name="AppTheme.Welcome" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/amber_500</item>
        <item name="colorControlActivated">@color/amber_900</item>
    </style>

    <style name="AppTheme.MovieSelect" parent="Base.Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/blue_grey_700</item>
        <item name="colorPrimaryDark">@color/blue_grey_900</item>
        <item name="colorAccent">@color/amber_800</item>
    </style>






</resources>
